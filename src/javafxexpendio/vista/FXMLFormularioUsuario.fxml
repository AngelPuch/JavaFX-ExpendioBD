<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="450.0" prefWidth="500.0" style="-fx-background-color: #F5F6FA;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="javafxexpendio.controlador.FXMLFormularioUsuarioController">
   <children>

      <!-- Título -->
      <Label layoutX="160.0" layoutY="20.0" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Registrar usuario" />

      <!-- Etiquetas -->
      <Label layoutX="110.0" layoutY="70.0" text="Nombre:" />
      <Label layoutX="110.0" layoutY="120.0" text="Apellido paterno:" />
      <Label layoutX="110.0" layoutY="170.0" text="Apellido materno:" />
      <Label layoutX="110.0" layoutY="220.0" text="Username:" />
      <Label layoutX="110.0" layoutY="270.0" text="Contraseña:" />
      <Label layoutX="110.0" layoutY="320.0" text="Tipo de usuario:" />

      <!-- Campos de texto con estilo moderno -->
      <TextField fx:id="tfNombre" layoutX="220.0" layoutY="65.0" style="-fx-background-radius: 8; -fx-border-color: #ccc; -fx-border-radius: 8; -fx-padding: 4 8;" />
      <TextField fx:id="tfApellidoPaterno" layoutX="220.0" layoutY="115.0" style="-fx-background-radius: 8; -fx-border-color: #ccc; -fx-border-radius: 8; -fx-padding: 4 8;" />
      <TextField fx:id="tfApellidoMaterno" layoutX="220.0" layoutY="165.0" style="-fx-background-radius: 8; -fx-border-color: #ccc; -fx-border-radius: 8; -fx-padding: 4 8;" />
      <TextField fx:id="tfUsername" layoutX="220.0" layoutY="215.0" style="-fx-background-radius: 8; -fx-border-color: #ccc; -fx-border-radius: 8; -fx-padding: 4 8;" />
      <PasswordField fx:id="pfPassword" layoutX="220.0" layoutY="265.0" style="-fx-background-radius: 8; -fx-border-color: #ccc; -fx-border-radius: 8; -fx-padding: 4 8;" />
      <ComboBox fx:id="cbTipoUsuario" layoutX="220.0" layoutY="315.0" prefWidth="150.0" style="-fx-background-radius: 8; -fx-border-color: #ccc; -fx-border-radius: 8;" />

      <!-- Etiquetas de error -->
      <Label fx:id="lbNombreError" layoutX="220.0" layoutY="90.0" prefHeight="16.0" prefWidth="153.0" style="-fx-font-size: 11px;" textFill="#E53935" />
      <Label fx:id="lbApellidoPaternoError" layoutX="220.0" layoutY="140.0" prefHeight="16.0" prefWidth="153.0" style="-fx-font-size: 11px;" textFill="#E53935" />
      <Label fx:id="lbUsernameError" layoutX="220.0" layoutY="240.0" prefHeight="16.0" prefWidth="153.0" style="-fx-font-size: 11px;" textFill="#E53935" />
      <Label fx:id="lbPasswordError" layoutX="220.0" layoutY="290.0" prefHeight="16.0" prefWidth="153.0" style="-fx-font-size: 11px;" textFill="#E53935" />
      <Label fx:id="lbTipoUsuarioError" layoutX="220.0" layoutY="340.0" prefHeight="16.0" prefWidth="153.0" style="-fx-font-size: 11px;" textFill="#E53935" />

      <!-- Botones -->
      <Button layoutX="160.0" layoutY="390.0" mnemonicParsing="false" onAction="#btnClicGuardar" style="-fx-background-color: #5A4FCF; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 4 12;" text="Guardar">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button layoutX="260.0" layoutY="390.0" mnemonicParsing="false" onAction="#btnClicCancelar" style="-fx-background-color: #E53935; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 4 12;" text="Cancelar">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>

   </children>
</AnchorPane>
