<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.text.*?>
<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="350.0" prefWidth="500.0" style="-fx-background-color: #F5F6FA;" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="javafxexpendio.controlador.FXMLRegistrarBebidaController">
   <children>

      <!-- Título -->
      <Label layoutX="160.0" layoutY="20.0" text="Registrar bebida" style="-fx-font-size: 18px; -fx-font-weight: bold;" />

      <!-- Etiquetas -->
      <Label layoutX="120.0" layoutY="70.0" text="Nombre:" />
      <Label layoutX="120.0" layoutY="120.0" text="Stock:" />
      <Label layoutX="120.0" layoutY="170.0" text="Stock mínimo:" />
      <Label layoutX="120.0" layoutY="220.0" text="Precio:" />

      <!-- Campos de texto con estilo moderno -->
      <TextField fx:id="tfNombre" layoutX="220.0" layoutY="65.0"
                 style="-fx-background-radius: 8; -fx-border-color: #ccc; -fx-border-radius: 8; -fx-padding: 4 8;" />
      <TextField fx:id="tfStock" layoutX="220.0" layoutY="115.0"
                 style="-fx-background-radius: 8; -fx-border-color: #ccc; -fx-border-radius: 8; -fx-padding: 4 8;" />
      <TextField fx:id="tfStockMinimo" layoutX="220.0" layoutY="165.0"
                 style="-fx-background-radius: 8; -fx-border-color: #ccc; -fx-border-radius: 8; -fx-padding: 4 8;" />
      <TextField fx:id="tfPrecio" layoutX="220.0" layoutY="215.0"
                 style="-fx-background-radius: 8; -fx-border-color: #ccc; -fx-border-radius: 8; -fx-padding: 4 8;" />

      <!-- Etiquetas de error -->
      <Label fx:id="lbNombreError" layoutX="220.0" layoutY="90.0" textFill="#E53935" style="-fx-font-size: 11px;" />
      <Label fx:id="lbStockError" layoutX="220.0" layoutY="140.0" textFill="#E53935" style="-fx-font-size: 11px;" />
      <Label fx:id="lbStockMinimoError" layoutX="220.0" layoutY="190.0" textFill="#E53935" style="-fx-font-size: 11px;" />
      <Label fx:id="lbPrecioError" layoutX="220.0" layoutY="240.0" textFill="#E53935" style="-fx-font-size: 11px;" />

      <!-- Botones -->
      <Button layoutX="160.0" layoutY="280.0" mnemonicParsing="false" onAction="#btnClicGuardar" text="Guardar"
              style="-fx-background-color: #5A4FCF; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 4 12;" >
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>
      <Button layoutX="260.0" layoutY="280.0" mnemonicParsing="false" onAction="#btnClicCancelar" text="Cancelar"
              style="-fx-background-color: #E53935; -fx-text-fill: white; -fx-background-radius: 6; -fx-padding: 4 12;" >
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor>
      </Button>

   </children>
</AnchorPane>
