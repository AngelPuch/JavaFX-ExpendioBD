               <children>
                  <Button fx:id="btnAgregar" mnemonicParsing="false" onAction="#btnClicAgregar" prefHeight="40.0" prefWidth="120.0" style="-fx-background-color: #5A4FCF; -fx-text-fill: white; -fx-background-radius: 6;" text="Agregar">
